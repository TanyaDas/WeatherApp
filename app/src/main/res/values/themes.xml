<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OneTech" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorOnSurface">@color/primary_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:fontFamily" >@font/poppins_medium</item>

    </style>

    <style name="Theme.OneTech" parent="Base.Theme.OneTech" />
</resources>